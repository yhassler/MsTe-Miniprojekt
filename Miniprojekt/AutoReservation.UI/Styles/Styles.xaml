<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AutoReservation.UI.Resources">
    <Style x:Key="EditControl" TargetType="Control">
        <Setter Property="Margin" Value="4" />
    </Style>

    <Style x:Key="SaveButton" BasedOn="{StaticResource EditControl}" TargetType="Button">
        <Setter Property="Width" Value="100" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

    <Style x:Key="GeneralButton" BasedOn="{StaticResource EditControl}" TargetType="Button">
        <Setter Property="Width" Value="130" />
    </Style>

    <Style x:Key="NavigationButton" BasedOn="{StaticResource EditControl}" TargetType="Button">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Padding" Value="20 0"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style BasedOn="{StaticResource EditControl}" TargetType="Label" />
    <Style BasedOn="{StaticResource EditControl}" TargetType="TextBox" />
    <Style BasedOn="{StaticResource EditControl}" TargetType="ComboBox" />
    <Style BasedOn="{StaticResource EditControl}" TargetType="Calendar" />
</ResourceDictionary>