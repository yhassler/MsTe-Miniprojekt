<Page x:Class="AutoReservation.UI.Views.Pages.KundeListePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReservation.UI"
      xmlns:viewModels="clr-namespace:AutoReservation.UI.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KundeListePage" d:DataContext="{d:DesignInstance viewModels:KundeListeViewModel}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock />
        <ListBox SelectionMode="Single" ItemsSource="{Binding Kunden}" SelectedItem="{Binding SelectedKunde}">

        </ListBox>
        <Button Content="Add" Command="{Binding AddCommand}" Grid.Column="0" Grid.Row="1"/>
        <Button Content="Edit" Command="{Binding EditCommand}"  Grid.Column="0" Grid.Row="1" Margin="335 4 4 4"/>
        <Button Content="Remove" Command="{Binding DeleteCommand}" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right"/>
    </Grid>

</Page>