<Page x:Class="AutoReservation.UI.Views.Pages.ReservationEditierenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReservation.UI.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservationEditierenPage">

    <Page.Resources>
        <ResourceDictionary Source="/Styles/Styles.xaml" />
    </Page.Resources>

    <DockPanel>
        <Button Style="{StaticResource SaveButton}" DockPanel.Dock="Bottom" Content="Save" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Content="Auto:" />
            <ComboBox Grid.Column="1" Grid.Row="0" />

            <Label Grid.Column="0" Grid.Row="1" Content="Kunde:" />
            <ComboBox Grid.Column="1" Grid.Row="1" />

            <Label Grid.Column="0" Grid.Row="2" Content="Datumsbereich:" />
            <Calendar Grid.Column="1" Grid.Row="2" FirstDayOfWeek="Monday" HorizontalAlignment="Left" SelectionMode="SingleRange" />
        </Grid>
    </DockPanel>
</Page>
