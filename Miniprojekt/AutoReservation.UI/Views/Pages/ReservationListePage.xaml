<Page x:Class="AutoReservation.UI.AutoListePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReservation.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservationListePage">

    <Page.Resources>
        <CollectionViewSource Source="{Binding Source={x:Static Application.Current}, Path=ReservationDto}" x:Key="ReservationListe" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock />
        <ListBox SelectionMode="Single" ItemsSource="{Binding Source={StaticResource ReservationListe}}">

        </ListBox>
        <Button Content="Add" Click="Button_Click_Add" Grid.Column="0" Grid.Row="1"/>
        <Button Content="Edit" Click="Button_Click_Edit" Grid.Column="0" Grid.Row="1" Margin="335 4 4 4"/>
        <Button Content="Remove" Click="Button_Click_Delete" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right"/>
    </Grid>

</Page>